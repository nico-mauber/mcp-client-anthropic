{
    "compilerOptions": {
      "target": "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "files": ["src/index.ts"],
    "exclude": ["node_modules"]
  }